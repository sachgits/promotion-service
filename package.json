{
  "name": "promotion-service",
  "version": "0.1.0",
  "description": "Promotion service",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "copy:bootstrap": "cp node_modules/bootstrap/dist/css/bootstrap.css demo/lib/",
    "copy:demo": "mkdir demo/lib; npm run copy:bootstrap; npm run copy:fonts;",
    "copy:fonts": "mkdir demo/fonts; cp node_modules/bootstrap/fonts/*.* demo/fonts; cp node_modules/transferwise-iconfont/fonts/*.* demo/fonts",
    "test": "npm run lint && jest",
    "test:watch": "jest --watch",
    "lint": "eslint src",
    "build": "webpack --env=prod",
    "dev": "webpack-dev-server --env=dev --color",
    "copy-files-to-dist": "cp .circleci/circle.yml dist && cp package.json dist && cp CHANGELOG.md dist",
    "deploy": "git-directory-deploy --directory dist/ --branch releases --username CircleCI --email circleci@transferwise.com",
    "postinstall": "npm run copy:demo",
    "release-to-github": "release-to-github-with-changelog --branch=releases"
  },
  "repository": {
    "type": "git",
    "fullname": "transferwise/promotion-service",
    "url": "https://github.com/transferwise/promotion-service.git"
  },
  "bugs": {
    "url": "https://github.com/transferwise/promotion-service/issues"
  },
  "homepage": "https://github.com/transferwise/promotion-service#readme",
  "devDependencies": {
    "angular-mocks": "^1.5.0",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.1.1",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.7.0",
    "git-directory-deploy": "^1.5.1",
    "jest": "^20.0.4",
    "release-to-github-with-changelog": "^1.1.4",
    "transferwise-iconfont": "git+ssh://git@github.com/transferwise/iconfont.git",
    "webpack-dev-server": "^2.9.3"
  },
  "dependencies": {
    "angular": "^1.5.0",
    "angular-cookies": "^1.5.0",
    "bootstrap": "git+https://github.com/transferwise/bootstrap.git",
    "tw-styleguide-components": "git+https://github.com/transferwise/styleguide-components.git",
    "webpack": "^3.1.0"
  }
}
